<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{% endblock %} - Movie Library</title>

    {% stylesheets
        '@AcmeMovieBundle/Resources/public/css/bootstrap.min.css'
        '@AcmeMovieBundle/Resources/public/css/bootstrap-responsive.min.css'
        '@AcmeMovieBundle/Resources/public/css/core.css' %}
<link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

    <!-- HTML5 Shim for IE6-8 -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    {% block stylesheets %}{% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
    <div class="navbar navbar-static-top">
        <div class="navbar-inner">
            <div class="container">
                <!-- Dropdown menu -->
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <!-- Project title -->
                <a href="#" class="brand">Movie Library Manager</a>

                <!-- Collapsable navigation -->
                <nav class="nav-collapse">
                    <!-- Main navigation -->
                    <ul class="nav">
                        <li class="active"><a href="#">Home</a></li>
                        <li><a href="#">Movies</a></li>
                        <li><a href="#">Genres</a></li>
                        <li><a href="#">Directors</a></li>
                    </ul>

                    <!-- Movie search -->
                    <form action="#" class="navbar-search pull-right">
                        <input type="text" class="search-query" placeholder="Search">
                    </form>
                </nav>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        {% block content %}{% endblock %}
    </div>
    {% javascripts
        '@AcmeMovieBundle/Resources/public/js/jquery.min.js'
        '@AcmeMovieBundle/Resources/public/js/bootstrap.min.js'
        '@AcmeMovieBundle/Resources/public/js/core.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% block footer_javascripts %}{% endblock %}
</body>
</html>
